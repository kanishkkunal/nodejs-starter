include mixins/_meta.pug

doctype html
html(lang='en-US')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    +titlemeta(title, siteName, description)
    +opengraph(title, siteName, currentPath)    
    link(rel="shortcut icon" type="image/png" href="/statics/img/favicon.png")
    link(rel='stylesheet', href='/statics/css/main.css')
    block styles
  body#top
    block header
    block content
    block footer
    block scripts
      script(src="/statics/js/main.js")
